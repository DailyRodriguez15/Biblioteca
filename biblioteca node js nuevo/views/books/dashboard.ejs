    <style>
      body {
        background-color: #f1f5fb;
        font-family: "Segoe UI", sans-serif;
      }
      .navbar-glass {
        backdrop-filter: blur(10px);
        background-color: rgba(139, 69, 19, 0.8) !important;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        z-index: 1040;
      }
      .sidebar {
        height: 100vh;
        background-color: #8b4513;
        color: white;
        padding: 2rem 1rem;
        position: fixed;
        width: 250px;
        top: 0;
        left: 0;
        overflow-y: auto;
      }
      .sidebar h4 {
        margin-bottom: 2rem;
      }
      .sidebar a {
        display: block;
        padding: 0.6rem 1rem;
        color: #ffffffcc;
        margin-bottom: 0.5rem;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 500;
        transition: background-color 0.2s ease;
      }
      .sidebar a:hover,
      .sidebar a.active {
        background-color: #5c2c06;
        color: #fff;
      }
      .main-content {
        margin-left: 270px;
        padding: 2rem;
        margin-top: 70px;
      }
      .card-highlight {
        background: linear-gradient(120deg, #8b4513 60%, #5c2c06 100%);
        color: #fff;
        border-radius: 1rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
      }
      .avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 12px;
        border: 2px solid #fff;
        background: #fff;
      }
      .timeline-item {
        background: #f8f9fa;
        border-radius: 0.7rem;
        padding: 1rem 1.2rem;
        box-shadow: 0 2px 8px rgba(139, 69, 19, 0.05);
        position: relative;
      }
      .timeline-item:not(:last-child) {
        border-left: 4px solid #8b4513;
        margin-left: 10px;
      }
      .prestamo-table thead th {
        background: #8b4513;
        color: #fff;
        vertical-align: middle;
      }
      .prestamo-table tbody tr {
        background: #fff;
        vertical-align: middle;
      }
      .prestamo-table td,
      .prestamo-table th {
        text-align: center;
      }
      .prestamo-table td.book-title {
        text-align: left;
      }
      .prestamo-table td.book-author {
        text-align: left;
      }
      .badge-prestado {
        background: #8b4513;
        color: #fff;
        font-weight: 500;
      }
      .badge-devuelto {
        background: #198754;
        color: #fff;
        font-weight: 500;
      }
      .text-brown {
        color: #8b4513;
      }
      .text-brown-highlight {
        color: #8b4513;
        text-shadow: 1px 1px 3px rgba(169, 116, 57, 0.6);
      }
      .dashboard-welcome {
        background: linear-gradient(135deg, #fdf6e3 0%, #f5e6d6 100%);
      }
      .book-card {
        position: relative;
        overflow: hidden;
      }
      .book-card:hover {
        transform: scale(1.06) translateY(-8px);
        box-shadow: 0 16px 36px #c0975acc !important;
        z-index: 2;
      }
      .card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(139, 69, 19, 0.72);
        opacity: 0;
        transition: opacity 0.3s;
        z-index: 3;
      }
      .group:hover .card-overlay {
        opacity: 1;
      }
      .badge-animated {
        animation: bounceBadge 1.4s infinite alternate;
      }
      @keyframes bounceBadge {
        0% {
          transform: scale(1) rotate(-7deg);
        }
        80% {
          transform: scale(1.18) rotate(7deg);
        }
        100% {
          transform: scale(1.1) rotate(-7deg);
        }
      }
      .fade-in {
        opacity: 0;
        transform: translateY(24px);
        animation: fadeInUp 0.8s forwards;
      }
      .fade-in:nth-child(1) {
        animation-delay: 0.05s;
      }
      .fade-in:nth-child(2) {
        animation-delay: 0.15s;
      }
      .fade-in:nth-child(3) {
        animation-delay: 0.25s;
      }
      .fade-in:nth-child(4) {
        animation-delay: 0.35s;
      }
      @keyframes fadeInUp {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      .add-book-btn {
        top: -24px;
        right: 0;
        z-index: 1;
        background: linear-gradient(
          90deg,
          #c0975a 60%,
          #8b4513 100%
        ) !important;
        color: #fff !important;
        font-weight: 700;
        border-radius: 50% !important;
        width: 56px;
        height: 56px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background 0.2s, box-shadow 0.2s, transform 0.2s;
        box-shadow: 0 6px 18px #c0975a44;
        border: none;
      }
      .add-book-btn:hover,
      .add-book-btn:focus {
        background: linear-gradient(
          90deg,
          #8b4513 60%,
          #c0975a 100%
        ) !important;
        color: #fff !important;
        transform: scale(1.1) rotate(-8deg);
        box-shadow: 0 12px 28px #c0975a88;
        text-decoration: none;
      }

      /* MODAL - Responsive mejorado */
      @media (max-width: 991.98px) {
        #modalLibro .modal-dialog {
          max-width: 98vw;
          margin: 1.2rem auto;
        }
        #modalLibro .modal-body {
          flex-direction: column !important;
          align-items: center !important;
        }
        #modalLibroImg {
